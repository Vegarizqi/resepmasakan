<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonAyam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Resep Ayam" />

    <Button
        android:id="@+id/buttonPadang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Resep Padang" />

    <Button
        android:id="@+id/buttonSoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Resep Aneka Soto Nusantara" />

    <!-- Tambahkan tombol untuk kategori lainnya jika diperlukan -->

</LinearLayout>